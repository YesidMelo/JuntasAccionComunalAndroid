<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_nombresAfiliado_enDirectivas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nombres y apellidos"
        />

    <Spinner
        android:id="@+id/spinner_configuracion_afiliado_directivas_estadosAfiliacion"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_cambiarEstadoAfiliacion"
        app:layout_constraintStart_toStartOf="@+id/textView_cambiarEstadoAfiliacion"
        app:layout_constraintTop_toBottomOf="@+id/textView_cambiarEstadoAfiliacion"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView_cambiarEstadoAfiliacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/estado_actual_afiliacion"
        app:layout_constraintEnd_toEndOf="@+id/textView_nombresAfiliado_enDirectivas"
        app:layout_constraintStart_toStartOf="@+id/textView_nombresAfiliado_enDirectivas"
        app:layout_constraintTop_toBottomOf="@+id/textView_nombresAfiliado_enDirectivas" />

    <TextView
        android:id="@+id/textView_cambiarRolApp_EnDirectiva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/rol_actual_en_directiva"
        app:layout_constraintEnd_toEndOf="@+id/spinner_configuracion_afiliado_directivas_estadosAfiliacion"
        app:layout_constraintStart_toStartOf="@+id/spinner_configuracion_afiliado_directivas_estadosAfiliacion"
        app:layout_constraintTop_toBottomOf="@+id/spinner_configuracion_afiliado_directivas_estadosAfiliacion" />

    <Spinner
        android:id="@+id/spinner_configuracionAfiliado_directivas_rolesApp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_cambiarRolApp_EnDirectiva"
        app:layout_constraintStart_toStartOf="@+id/textView_cambiarRolApp_EnDirectiva"
        app:layout_constraintTop_toBottomOf="@+id/textView_cambiarRolApp_EnDirectiva"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_actualizar_rol_directivas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/actualizar_rol_estado_app"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/spinner_configuracionAfiliado_directivas_rolesApp"
        app:layout_constraintStart_toStartOf="@+id/spinner_configuracionAfiliado_directivas_rolesApp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_configuracionAfiliado_directivas_rolesApp" />

</androidx.constraintlayout.widget.ConstraintLayout>